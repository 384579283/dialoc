<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/row_border">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_report_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:text="Clinic is Open"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_report_number"
        android:paddingBottom="5dp"
        android:layout_below="@+id/user_report_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:text="Number of Users Reporting: "/>

</RelativeLayout>